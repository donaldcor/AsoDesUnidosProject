<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#015C56"
    android:orientation="vertical"
    tools:context=".Control.misPrestamos">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/orangeF5812B"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#015C56" />

    <Button
        android:id="@+id/regresar_mis_prest_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orangeF5812B"
        android:text="@string/regresar"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="380dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/diseno_linear_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewMisPrestamos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/mis_prestamos"
            android:textColor="#000000"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaPrestamos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp" />

    </LinearLayout>

</LinearLayout>